// Prisma + Neon
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")        // pooled
  directUrl = env("DIRECT_URL")         // optional: non-pooled
}

generator client {
  provider = "prisma-client-js"
}

model TailoredRun {
  id        String   @id @default(cuid())
  resume    String
  jd        String
  summary   String
  message   String
  createdAt DateTime @default(now())
}
